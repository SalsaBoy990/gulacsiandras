<!-- BLOGPOSTS -->
<div class="sm-col-12 md-col-10 lg-col-8 col-9 mx-auto align-left">

  
<% for (var i = site.postdata.length - 1, j = 0; i >= 0; i--) { %>
  <div class="pt1 m0 mb2">
    <p class="smallest gray mb0 merryweather"><%= site.dateFormatted[i] %></p>
    <a href="<%= pathsToPosts[j] %>" class="big pb1 bold-700 merryweather"><%= site.postdata[i].title %></a>

    <div class="mt1 border-bottom-black" style="display: inline-block">
      <a href="<%= pathsToPosts[j++] %>">
        <img class="left m0 cover" style="width: 40%" src="<%= site.postdata[i].cover_image %>" alt="<%= site.postdata[i].title %>"/>
        <p class="dark-gray right m0 pbhalf pl1" style="width: 60%"><%= site.postdata[i].description %></p>
      </a>
    </div>

  </div>
<% } %>
</div>
